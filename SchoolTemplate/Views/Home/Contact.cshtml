@model PersonModel
@{
    ViewData["Title"] = "Contact";
}
<h2>Contact</h2>
@if (Model != null)
{
    <p>
        Je voornaam is: @Model.Voornaam <br />
        Je achternaam is: @Model.Achternaam <br />
    </p>

}


<form method="post">
    <input type="text" name="voornaam" placeholder="Voornaam" />
    <input type="text" name="achternaam" placeholder="Achternaam" />
    @Html.ValidationMessageFor(m => m.Achternaam) <br />
    <input type="text" name="email" placeholder="e-mail" />
    @Html.ValidationMessageFor(m => m.Email) <br />
    <p>geboortedatum:</p>
    <input type="datetime" name="geboortedatum" />
    <input type="submit" value="vestuur" />
</form>
