@using SchoolTemplate.Database;
@model List<Festival>
@{
    ViewData["Title"] = "Home Page";
}

<!--
    De form in de contact pagina wordt opgeslagen, in de ticket pagina niet. Als u de website wil proberen gebruik dan de contact pagina formulier.
-->


<div class="banner">
    <p href="/Festival/1/Tommorowland" class="box"> Koop nu tickets voor het eerst volgende festival: Tomorrowland!</p>
</div>
<h1 class="text"> Home pagina</h1>




<table class="text">
    <tr>
        <th>Festival naam</th>
        <th>Informatie</th>
        <th>Datum</th>
        <th>Meer informatie</th>
    </tr>

    @foreach (Festival f in Model)
    {
        <tr>
            <td>@f.Naam</td>
            <td>@f.Korte_info</td>
            <td>@f.Begin_datum.ToString("dd MMMM yyyy")</td>
            <td><a href="/Festival/@f.Id/@f.Naam">Lees meer...</a></td>
        </tr>
    }

</table>

<a href="https://www.tripadvisor.nl/Attraction_Review-g3250534-d10020312-Reviews-Tomorrowland_Belgium-Boom_Antwerp_Province.html"><div class="recensies"></div></a>

