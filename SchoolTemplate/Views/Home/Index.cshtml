<div class="banner">
    <p class="box"> Koop nu tickets voor het eerst volgende festival: De Feesttent!</p>
</div>
<h1 class="text"> Home pagina</h1>




<table class="text">
    <tr>
        <th>Festival naam</th>
        <th>Informatie</th>
        <th>Datum</th>
        <th>Meer informatie</th>
    </tr>

    @foreach (festival f in Model)
    {
        <tr>
            <td>@f.naam</td>
            <td>@f.korte_info</td>
            <td>@f.begin_datum.ToString("dd MMMM yyyy")</td>
            <td><a href="/Festival/@f.id/@f.naam">Lees meer...</a></td>
        </tr>
    }

</table>

